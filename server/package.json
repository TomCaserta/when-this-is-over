{
  "name": "when-this-is-over",
  "version": "1.0.0",
  "description": "When this is over server side",
  "main": "app.js",
  "author": "Rodrigo Siqueira",
  "license": "MIT",
  "scripts": {
    "predev": "npm run build",
    "dev": "NODE_ENV=development nodemon",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node -r tsconfig-paths/register -r ts-node/register dist/index.js"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "."
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register index.ts",
    "ext": "ts, js"
  },
  "dependencies": {
    "bcrypt": "^4.0.1",
    "config": "^3.3.0",
    "consola": "^2.11.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.6",
    "node-fetch": "^2.6.1",
    "ts-node": "^8.8.1",
    "tsconfig-paths": "^3.9.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/config": "0.0.36",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/joi": "^14.3.4",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/mongoose": "^5.7.7",
    "@types/node": "^13.9.3",
    "@types/node-fetch": "^2.5.5",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3",
    "nodemon": "2.0.2"
  }
}
